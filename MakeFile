# Compiler settings
CC = gcc
ASM = nasm
CFLAGS = -Wall -O2
ASMFLAGS = -f elf64

# Directories
SRC_DIR = src
BUILD_DIR = build

# Files
C_SRC = $(SRC_DIR)/main.c
ASM_SRC = $(SRC_DIR)/disk_asm.asm
ASM_OBJ = $(BUILD_DIR)/disk_asm.o
TARGET = diskscout

# Default target
all: $(TARGET)

# Create build directory
$(BUILD_DIR):
	mkdir -p $(BUILD_DIR)

# Compile Assembly
$(ASM_OBJ): $(ASM_SRC) | $(BUILD_DIR)
	$(ASM) $(ASMFLAGS) $< -o $@

# Compile and link
$(TARGET): $(C_SRC) $(ASM_OBJ)
	$(CC) $(CFLAGS) $^ -o $@

# Clean
clean:
	rm -rf $(BUILD_DIR) $(TARGET)

# Install (optional)
install: $(TARGET)
	cp $(TARGET) /usr/local/bin/

# Uninstall
uninstall:
	rm -f /usr/local/bin/$(TARGET)

.PHONY: all clean install uninstall